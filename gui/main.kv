Screen:
    MDNavigationLayout:
        ScreenManager:
            Screen:
                BoxLayout:
                    orientation: 'vertical'
                    canvas:
                        Color:
                            rgba: 53/255, 53/255, 53/255, 1
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    MDToolbar:
                        title: 'Dartboard'
                        left_action_items: [["menu", lambda x: nav_drawer.set_state()]]
                        right_action_items: [["menu", lambda y: gamemode_settings.set_state()]]
                        elevation:10
                        md_bg_color: 171/255, 171/255, 171/255, 1
                        specific_text_color: 0, 0, 0, 1

                    Image: 
                        id: dartboard_img
                        source: 'assets/images/dart_board.png'
                        allow_stretch: True
                        keep_ratio: True
                        width: 500

                    ScrollView:
                        do_scroll_x: False
                        do_scroll_y: True
                        
                        GridLayout:
                            id: player_grid
                            cols: 6
                            spacing: 70
                        
                    
                    MDRectangleFlatButton:
                        id: generate_button
                        text: "Score"
                        pos_hint: {"center_x": 0.5, "center_y": 0.5}
                        on_press: app.generate_test_data_pressed()

                    MDRectangleFlatButton:
                        id: miss_button
                        text: "Shuffle"
                        pos_hint: {"center_x": 0.5, "center_y": 0.5}
                        on_press: app.shuffle_players()

        MDNavigationDrawer:
            id: nav_drawer
            BoxLayout:
                orientation: 'vertical'

                MDLabel:
                    text: 'Player Settings'
                    halign: "center"
                    font_size: 32
                    size_hint_y: None
                    height: self.texture_size[1]

                MDLabel:
                    text: 'Current Players'
                    halign: "left"
                    font_size: 16
                    size_hint_y: None
                    height: self.texture_size[1]

                MDGridLayout:
                    id: current_players_grid
                    rows: 10
                    adaptive_height: True

                MDTextField:
                    id: add_player_text
                    hint_text: "Player name"

        
                MDRectangleFlatButton:
                    id: add_player_button
                    text: "Add Player"
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    on_press: app.add_player_pressed()

                MDLabel:
                    text: 'Available Players'
                    bold: True
                    halign: "left"
                    font_size: 16
                    size_hint_y: None
                    height: self.texture_size[1]

                MDGridLayout:
                    id: available_players_grid
                    rows: 10
                    adaptive_height: True
                
                MDRaisedButton:
                    id: dropdown_menu
                    text: "Game score"
                    pos_hint: {"center_x": .5, "center_y": .5}
                    on_release: app.menu.open()
                    
                BoxLayout:
                    orientation: 'horizontal'
                    MDLabel:
                        text: 'Double out'
                    MDSwitch:
                        id: double_out_checkbox
                    


                MDRectangleFlatButton:
                    id: restart_game_button
                    text: "Restart game"
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    on_press: app.restart_game()
            
                
                ScrollView:


        MDNavigationDrawer:
            id: gamemode_settings
            BoxLayout:
                orientation: 'vertical'

                MDLabel:
                    text: 'Gamemode Settings'
                    halign: "center"
                    font_size: 32
                    size_hint_y: None
                    height: self.texture_size[1]
            
                
                ScrollView:
